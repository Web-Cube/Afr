extends ../layouts/base

append vars
	- title = 'Contact us';

block content
	+b.head-page
		+e.wrap.wrap
			+e.row._contact.flex
				+e.column._left.is-discussion
					+e.H1.title.h1 Contact us
				+e.column._right.is-discussion
					+e.top.is-discussion
						+e.search-form.search-form__.is-discussion
							+e.field.field__
								+e.INPUT.input(type="text", name="search" placeholder="Search (enter your search term or hashtag)")
							+e.BUTTON.btn
								+icon('search')
	+b.contact-us
		+e.wrap.wrap
			+e.inner
				+e.H3.title.h3 Send a message
				+e.desc * - required fields
				+e.row.flex
					+e.column._left
						+e.FORM.form.form__(actioin="#")
							+e.row.flex._justify
								+e.col2
									+e.field.field__
										+e.INPUT.input(type="text", name="firstName" placeholder="*First name" required)
								+e.col2
									+e.field.field__
										+e.INPUT.input(type="text", name="lastName" placeholder="*Last name" required)
								+e.col2
									+e.field.field__
										+e.INPUT.input(type="tel", name="phone" placeholder="*Phone" required)
								+e.col2
									+e.field.field__
										+e.INPUT.input(type="email", name="email" placeholder="*E-mail" required)
							+e.select.select__.is-change.js-select
								+e.INPUT.input.js-select-input(type="text" required)
								+e.head.js-select-head
									+e.label.js-select-label *Type of appeal
									+e.arrow
										+icon('downArrow')
								+e.body
									+e.list
										+e.item.js-select-item(data-value="Hot News") Hot News
										+e.item.js-select-item(data-value="Life") Life
										+e.item.js-select-item(data-value="Showbiz") Showbiz
										+e.item.js-select-item(data-value="Music") Music
										+e.item.js-select-item(data-value="Sport") Sport
										+e.item.js-select-item(data-value="Health") Health
										+e.item.js-select-item(data-value="Politics") Politics
										+e.item.js-select-item(data-value="Economics") Economics
										+e.item.js-select-item(data-value="Others") Others
							+e.field.field__
								+e.TEXTAREA.textarea(placeholder="*Your message" name="detail")
								+e.add.add-file__
									+e.INPUT.input(type="file" name="foto")
									+e.text
										strong +Add file
							+e.BUTTON.btn.button Send message
					+e.column._right
						+e.info
							+e.info-title.h3 Contact info
							+e.info-list
								+e.info-item
									+e.A.info-link.h3(href="tel:+380881111111")
										+e.info-icon
											+icon('iphone')
										+e.info-text +38 (088) - 11 - 11 - 111
								+e.info-item
									+e.A.info-link.h3(href="mailto:your@mail.com")
										+e.info-icon
											+icon('email')
										+e.info-text your@mail.com
							+e.social.social__
								+e.A.item(href="#")
									+icon('instagram')
								+e.A.item(href="#")
									+icon('fb')
								+e.A.item(href="#")
									+icon('twitter')
								+e.A.item(href="#")
									+icon('youtube')